# Backend .env example for BLS
# Copy this file to .env and fill credentials/secrets

# --- Database (MySQL) ---
DB_HOST=localhost
DB_PORT=3306
DB_USER=bls_user
DB_PASSWORD=change_me
DB_NAME=bls

# --- JWT / Security ---
# Use a long random string in real .env
JWT_SECRET=please_change_this_secret
JWT_ALGORITHM=HS256
JWT_EXP_MINUTES=60

# --- CORS ---
# Comma-separated list of allowed origins for the frontend
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://127.0.0.1:4200

# --- Mail (FastMail) ---
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_FROM_NAME=BLS Academy
MAIL_STARTTLS=true
MAIL_SSL_TLS=false
USE_CREDENTIALS=true
VALIDATE_CERTS=true

# --- Paths ---
# Template folder (default resolved in config.py). Only override if necessary.
TEMPLATE_FOLDER=
